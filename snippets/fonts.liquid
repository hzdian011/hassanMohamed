{%- unless settings.type_body_font.system?
  and settings.type_subheading_font.system?
  and settings.type_heading_font.system?
-%}
  <link
    rel="preconnect"
    href="https://fonts.shopifycdn.com"
    crossorigin
  >
{%- endunless -%}

{% # theme-check-disable %}
{%- unless settings.type_body_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_body_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.type_subheading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_subheading_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.type_heading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_heading_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.type_accent_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_accent_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{% # theme-check-enable %}
{%- comment -%} ✅ خطوطك المخصصة {%- endcomment -%}
<link rel="preload" as="font" href="{{ 'Jost-Light.woff2' | asset_url }}" type="font/woff2" crossorigin>
<link rel="preload" as="font" href="{{ 'Jost-Regular.woff2' | asset_url }}" type="font/woff2" crossorigin>
<link rel="preload" as="font" href="{{ 'Jost-Medium.woff2' | asset_url }}" type="font/woff2" crossorigin>

<style>
  @font-face {
    font-family: 'Jost';
    src: url('{{ "Jost-Light.woff2" | asset_url }}') format('woff2');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Jost';
    src: url('{{ "Jost-Regular.woff2" | asset_url }}') format('woff2');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: 'Jost';
    src: url('{{ "Jost-Medium.woff2" | asset_url }}') format('woff2');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }
</style>