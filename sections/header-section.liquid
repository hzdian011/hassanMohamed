{% schema %}
{
  "name": "Gift Section",
  "settings": [
    {
      "type": "select",
      "id": "logo_type",
      "label": "Logo Type",
      "options": [
        { "value": "svg", "label": "SVG (default)" },
        { "value": "image", "label": "Image" },
        { "value": "text", "label": "Text" }
      ],
      "default": "svg"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "My Brand",
      "info": "Displayed if Logo Type is Text"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image",
      "info": "Upload logo image (SVG, PNG, JPG)"
    },
    {
      "type": "text",
      "id": "nav_subtitle",
      "label": "Navigation Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "nav_button",
      "label": "Navigation Button",
      "default": "Choose Gift"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Title",
      "default": "The Gift Guid"
    },
    {
      "type": "text",
      "id": "left_text_desktop",
      "label": "Left Text (Desktop)",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "left_text_mobile",
      "label": "Left Text (Mobile)",
      "default":"Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "left_button",
      "label": "Left Button",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "footer_text_desktop",
      "label": "Footer Text (Desktop)",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "text",
      "id": "footer_text_mobile",
      "label": "Footer Text (Mobile)",
      "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
    }
  ]
}
{% endschema %}

<section>
  <!-- Raw 1 -->
  {% comment %} كل الناف جديد يا حسن {% endcomment %}
  <nav class="gift-nav">
    <!-- Burger Menu -->
    <button class="burger-btn" id="burger-btn" aria-label="Menu">
      <svg id="burger-icon" width="20" height="12" viewBox="0 0 20 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1 6H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M1 1H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M1 11H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <!-- Logo -->
    <div class="gift-logo">
      {% if section.settings.logo_type == 'text' %}
        <h1 class="logo-text">{{ section.settings.logo_text }}</h1>
      {% elsif section.settings.logo_type == 'image' and section.settings.logo_image != blank %}
        <img src="{{ section.settings.logo_image | img_url: '200x' }}" alt="Brand Logo" width="" height="">
      {% else %}
        <img src="{{ 'brandLogo.svg' | asset_url }}" alt="Brand Logo" width="150" height="">
      {% endif %}
    </div>

    <!-- Links -->
    <div class="nav-links" id="mobile-menu">
      <p class="gift-subtitle">{{ section.settings.nav_subtitle }}</p>
      <button class="gift-btn">
        {{ section.settings.nav_button }}
        <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 5.25C0.585786 5.25 0.25 5.58579 0.25 6C0.25 6.41421 0.585786 6.75 1 6.75L1 5.25ZM26.5303 6.53033C26.8232 6.23743 26.8232 5.76256 26.5303 5.46967L21.7574 0.696697C21.4645 0.403804 20.9896 0.403804 20.6967 0.696697C20.4038 0.989591 20.4038 1.46446 20.6967 1.75736L24.9393 6L20.6967 10.2426C20.4038 10.5355 20.4038 11.0104 20.6967 11.3033C20.9896 11.5962 21.4645 11.5962 21.7574 11.3033L26.5303 6.53033ZM1 6.75L26 6.75L26 5.25L1 5.25L1 6.75Z" fill="#333333"/>
        </svg>
      </button>
    </div>
  </nav>

  <div class="gift-content">
    <!-- Raw 2 -->
    <div class="gift-row2">
      <img src="{{ 'gifts-upper.svg' | asset_url }}" width="" height="">
    </div>

    <!-- Raw 3 -->
    <div class="gift-row3">
      <!-- Left Side -->
      <div class="gift-row3-left">
        <h3 class="gift-title">{{ section.settings.left_title }}</h3>
        <p class="gift-desc desktop-desc">{{ section.settings.left_text_desktop }}</p>
        <p class="gift-desc mobile-desc">{{ section.settings.left_text_mobile }}</p>
        <button class="gift-cta">
          {{ section.settings.left_button }}
          <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 5.25C0.585786 5.25 0.25 5.58579 0.25 6C0.25 6.41421 0.585786 6.75 1 6.75L1 5.25ZM26.5303 6.53033C26.8232 6.23743 26.8232 5.76256 26.5303 5.46967L21.7574 0.696697C21.4645 0.403804 20.9896 0.403804 20.6967 0.696697C20.4038 0.989591 20.4038 1.46446 20.6967 1.75736L24.9393 6L20.6967 10.2426C20.4038 10.5355 20.4038 11.0104 20.6967 11.3033C20.9896 11.5962 21.4645 11.5962 21.7574 11.3033L26.5303 6.53033ZM1 6.75L26 6.75L26 5.25L1 5.25L1 6.75Z" fill="#333333"/>
          </svg>
        </button>
      </div>
      <!-- Right Side -->
      <div class="gift-row3-right">
        <img src="{{ 'gifts-right.svg' | asset_url }}" alt="Gift Image" width="" height="">
        <img src="{{ 'mobile-banner.svg' | asset_url }}" alt="Gift Image" width="" height="">
      </div>
    </div>

    <!-- Raw 4 -->
  </div>
  <div class="gift-row4" style="margin-top: -3px">
    <p class="gift-footer desktop-desc">{{ section.settings.footer_text_desktop }}</p>
    <p class="gift-footer mobile-desc">{{ section.settings.footer_text_mobile }}</p>
  </div>
</section>

{{ 'header-style.css' | asset_url | stylesheet_tag }}
<script src="{{ 'header-script.js' | asset_url }}" defer></script>
