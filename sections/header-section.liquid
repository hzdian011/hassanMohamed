{% comment %} {{ 'cta-button.css' | asset_url | stylesheet_tag }}

<div class="my-section">
  {% render 'cta-button', text: 'Click Me' %}
</div> {% endcomment %}

<a href="routes.all_products_collection_url" class="custom-btn">
  <span>SHOP NOW</span>
  <img src="{{ 'Arrow 1.svg' | asset_url }}" alt="arrow" class="arrow-icon" width="" height="">
</a>

<style>
.custom-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 16px 32px;
  background: linear-gradient(to right, #ffeb3b 50%, #000 50%);
  background-size: 200% 100%;
  background-position: left bottom;
  color: #000;
  font-size: 18px;
  font-weight: 600;
  text-decoration: none;
  transition: background-position 1s ease; /* ابطأ */
  position: relative;
  overflow: hidden;
}

.custom-btn .arrow-icon {
  width: 22px;
  height: auto;
  transition: transform 0.6s ease, filter 0.6s ease;
}

/* Hover Effect */
.custom-btn:hover {
  background-position: right bottom; /* يعمل slide */
  color: #fff;
}

.custom-btn:hover .arrow-icon {
  transform: translateX(8px); /* slide effect */
  filter: brightness(0) invert(1); /* يخلي السهم أبيض */
}
</style>

