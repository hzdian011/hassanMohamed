{% schema %}
{
  "name": "Gift Section",
  "settings": [
    {
      "type": "text",
      "id": "nav_subtitle",
      "label": "Navigation Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "nav_button",
      "label": "Navigation Button",
      "default": "Choose Gift"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Title",
      "default": "The Gift Guid"
    },
    {
      "type": "text",
      "id": "left_text",
      "label": "Left Text",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "left_button",
      "label": "Left Button",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ]
}
{% endschema %}

<section>
  <!-- Raw 1 -->
  <nav class="gift-nav">
    <div class="gift-logo">
      <img src="{{ 'brandLogo.svg' | asset_url }}" alt="Brand Logo" width="150" height="auto">
    </div>
    <p class="gift-subtitle">{{ section.settings.nav_subtitle }}</p>
    <button class="gift-btn">
      {{ section.settings.nav_button }}
      <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1 5.25C0.585786 5.25 0.25 5.58579 0.25 6C0.25 6.41421 0.585786 6.75 1 6.75L1 5.25ZM26.5303 6.53033C26.8232 6.23743 26.8232 5.76256 26.5303 5.46967L21.7574 0.696697C21.4645 0.403804 20.9896 0.403804 20.6967 0.696697C20.4038 0.989591 20.4038 1.46446 20.6967 1.75736L24.9393 6L20.6967 10.2426C20.4038 10.5355 20.4038 11.0104 20.6967 11.3033C20.9896 11.5962 21.4645 11.5962 21.7574 11.3033L26.5303 6.53033ZM1 6.75L26 6.75L26 5.25L1 5.25L1 6.75Z" fill="#333333"/>
      </svg>
    </button>
  </nav>

  <!-- Raw 2 -->
  <div>
    <img src="{{ 'gifts-upper.svg' | asset_url }}" width="" height="">
  </div>

  <!-- Raw 3 -->
  <div class="gift-row3">
    <!-- Left Side -->
    <div class="gift-row3-left">
      <h3 class="gift-title">{{ section.settings.left_title }}</h3>
      <p class="gift-desc">{{ section.settings.left_text }}</p>
      <button class="gift-cta">{{ section.settings.left_button }}</button>
    </div>
    <!-- Right Side -->
    <div class="gift-row3-right">
      <img src="{{ 'gifts-right.svg' | asset_url }}" alt="Gift Image" width="" height="">
    </div>
  </div>

  <!-- Raw 4 -->
  <div class="gift-row4" style="margin-top: -3px">
    <p class="gift-footer">{{ section.settings.footer_text }}</p>
  </div>
</section>

<style>
    /* ================== General ================== */
    section {
      overflow-x: hidden; /* منع أي scroll جانبي */
      width: 100%;
      box-sizing: border-box;
    }

    /* ================== Nav ================== */
    .gift-nav {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 10px 50px;
      width: 100%;
      box-sizing: border-box;
      background: #F5F5F5;
      flex-wrap: nowrap;
    }

    .gift-logo {
      font-family: 'Jost', sans-serif;
      font-size: 18px;
      font-weight: 600;
      color: #000;
      white-space: nowrap;
    }

    .gift-subtitle {
      font-family: 'Jost', sans-serif;
      font-size: 16px;
      font-weight: 400;
      color: #000;
      margin: 0;
      text-align: center;
      line-height: 1.25;
      flex: 1;
    }

    /* Button style */
    .gift-btn {
      position: relative;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
      padding: 12px 30px;
      background: #FFD700;
      border: none;
      color: #000;
      font-family: 'Jost', sans-serif;
      font-size: 16px;
      text-transform: uppercase;
      cursor: pointer;
      overflow: hidden;
      transition: color 0.3s ease, border-color 0.3s ease;
      z-index: 1;
    }
    .gift-btn::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: #000;
      transition: all 0.4s ease;
      z-index: -1;
    }
    .gift-btn svg {
      position: relative;
      z-index: 2;
      opacity: 1;
      transition: opacity 0.2s ease;
    }
    .gift-btn svg path {
      stroke: #000;
      fill: #000;
      transition: stroke 0.3s ease, fill 0.3s ease;
    }
    .gift-btn:hover {
      color: #fff;
      border-color: #000;
    }
    .gift-btn:hover::before {
      left: 0;
    }
    .gift-btn:hover svg {
      opacity: 0;
      transition-delay: 0s;
      transition-duration: 0.4s;
    }
    .gift-btn:hover svg path {
      stroke: #fff;
      fill: #fff;
    }

    /*=================== Row 4 ================== */
 section > div {
  display: flex;
  justify-content: flex-start; /* يبدأ من الشمال */
}

section > div img {
  flex-grow: 1; /* يكبر ناحية اليمين */
  max-width: 80%; /* عشان ما يتفشّش زيادة */
}

    /* ================== Row 3 ================== */
    .gift-row3 {
      display: flex;
      justify-content: space-between;
      align-items: center;
      /*padding: 50px;*/
      /*gap: 40px;*/
      padding: 0 0 0 40px;
      width: 100%;
      box-sizing: border-box;
    }

    .gift-row3-left {

    }

    .gift-title {
      font-family: 'Jost', sans-serif;
      font-size: 70px;
      font-weight: 500;
      line-height: 100%;
      color: #000;
      margin-bottom: 20px;
    }
    .gift-desc {
      font-family: 'Jost', sans-serif;
      font-size: 20px;
      font-weight: 400;
      line-height: 140%;
      max-width: 480px;
      margin-bottom: 30px;
      color: #000;
    }
    .gift-cta {
      background: #000;
      color: #FFF;
      border: none;
      padding: 14px 40px;
      font-family: 'Jost', sans-serif;
      font-size: 16px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }
    .gift-cta::after {
      content: "\2192";
      margin-left: 8px;
      color: #FFF;
      display: inline-block;
      transition: all 0.3s ease;
    }
    .gift-cta:hover {
      background: #FFF;
      color: #000;
      border: 1.5px solid #000;
    }
    .gift-cta:hover::after {
      color: #000;
      transform: translateX(5px);
    }
    .gift-row3-right img {
      max-width: 100%;
      height: auto;
    }

    /* ================== Row 4 ================== */
    .gift-row4 {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 8px 20px;
      width: 100%;
      background: #F5F5F5;
      box-sizing: border-box;
    }
    .gift-footer {
      font-family: 'Jost', sans-serif;
      font-weight: 400;
      font-size: 16px;
      color: #000;
      margin: 0;
      text-align: center;
    }

    /* ================== Responsive ================== */
    @media (max-width: 1024px) {
      .gift-nav {
        flex-wrap: wrap;
        padding: 10px 20px;
        gap: 10px;
      }
      .gift-row3 {
        flex-direction: column;
        text-align: center;
        padding: 20px;
      }
      .gift-desc {
        margin: 0 auto 20px;
      }
    }

    @media (max-width: 768px) {
      .gift-subtitle,
      .gift-btn {
        display: none;
      }
      .gift-title {
        font-size: 40px;
      }
      .gift-desc {
        font-size: 16px;
      }
    }
</style>
