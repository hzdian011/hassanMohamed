{% schema %}
{
    "name": "Gift Section",
    "settings": [
        {
            "type": "text",
            "id": "nav_title",
            "label": "Navigation Title",
            "default":"TISSO VISION"
        },
        {
            "type": "text",
            "id": "nav_subtitle",
            "label": "Navigation Subtitle",
            "default":"Find the ideal gift for your loved ones."
        },
        {
            "type": "text",
            "id": "nav_button",
            "label": "Navigation Button",
            "default":"Choose Gift"
        },
        {
            "type": "text",
            "id": "left_title",
            "label": "Left Title",
            "default":"The Gift Guid"
        },
        {
            "type": "text",
            "id": "left_button",
            "label": "Left Button",
            "default":"Shop Now"
        },
        {
            "type": "text",
            "id": "footer_text",
            "label": "Footer Text",
            "default":"SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
        }
    ]
}
{% endschema %}
<section>
  <!-- Raw 1 -->
  <nav>
    <a> {{ section.settings.nav_title }} </a>
    <div>{{ section.settings.nav_subtitle }}</div>
    <button>choose gift</button>
  </nav>

  <!-- Raw 2 -->
  <div>
    <img src="{{ 'gifts-upper.svg' | asset_url }}" width="" height="">
  </div>

  <!-- Raw 3 -->
  <div>
    <!-- Left Side -->
    <div>
      <h3>The Gift Guid</h3>
      <p>The Gift Guid</p>
      <button>Shop Now</button>
    </div>
    <!-- Right Side -->
    <div>
      <img src="{{ 'gifts-right.svg' | asset_url }}" width="" height="">
    </div>
  </div>

  <!-- Raw 4 -->
  <div>
    <p>SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>
  </div>
</section>
