{% schema %}
{
  "name": "Gift Section",
  "settings": [
    {
      "type": "text",
      "id": "nav_title",
      "label": "Navigation Title",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "nav_subtitle",
      "label": "Navigation Subtitle",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "nav_button",
      "label": "Navigation Button",
      "default": "Choose Gift"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left Title",
      "default": "The Gift Guid"
    },
    {
      "type": "text",
      "id": "left_text",
      "label": "Left Text",
      "default": "The Gift Guid"
    },
    {
      "type": "text",
      "id": "left_button",
      "label": "Left Button",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ]
}
{% endschema %}

<section>
  <!-- Raw 1 -->
  <nav class="gift-nav">
    <div class="gift-logo">{{ section.settings.nav_title }}</div>
    <p class="gift-subtitle">{{ section.settings.nav_subtitle }}</p>
    <button class="gift-btn">{{ section.settings.nav_button }}</button>
  </nav>

  <!-- Raw 2 -->
  <div>
    <img src="{{ 'gifts-upper.svg' | asset_url }}" width="" height="">
  </div>

  <!-- Raw 3 -->
  <div>
    <!-- Left Side -->
    <div>
      <h3>{{ section.settings.left_title }}</h3>
      <p>{{ section.settings.left_text }}</p>
      <button>{{ section.settings.left_button }}</button>
    </div>
    <!-- Right Side -->
    <div>
      <img src="{{ 'gifts-right.svg' | asset_url }}" width="" height="">
    </div>
  </div>

  <!-- Raw 4 -->
  <div>
    <p>{{ section.settings.footer_text }}</p>
  </div>
</section>

<style>
        {% comment %} Nav style {% endcomment %}
  /* Nav style */
  .gift-nav {
    display: flex;
    flex-direction: row;
    justify-content: space-between; /* يخلي العناصر تتوزع كويس */
    align-items: center;
    padding: 10px 50px;
    gap: 20px; /* gap معقول مش كبير */
    width: 100%;
    max-width: 1440px;
    height: 64px;
    background: #F5F5F5;
    margin: 0 auto;
    flex-wrap: nowrap; /* امنع العناصر تنزل تحت بعض */
  }

  /* اللوجو */
  .gift-logo {
    font-family: 'Jost', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #000;
    white-space: nowrap; /* يمنع الكلمة تتكسر لسطرين */
  }

  /* النص */
  .gift-subtitle {
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: #000;
    margin: 0;
    text-align: center;
    flex: 1; /* يخلي النص ياخد المساحة في النص */
  }

  /* الزرار */
  .gift-btn {
    background: #FFF544;
    border: 1.5px solid #000;
    padding: 10px 20px;
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .gift-btn:hover {
    background: #000;
    color: #FFF544;
  }

  /* Responsive للموبايل */
  @media (max-width: 768px) {
    .gift-nav {
      flex-direction: column;
      height: auto;
      gap: 10px;
      padding: 20px;
    }

    .gift-subtitle {
      text-align: center;
      flex: unset;
    }
  }
</style>
