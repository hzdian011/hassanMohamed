        <button class="plus-btn" data-variant-id="{{ product.variants.first.id }}">+</button>


        <div class="product-dialog" id="dialog-{{ product.id}}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.description | truncate: 150 }}</p>
          <p>{{ product.price | money }}</p>
          <button class="close-btn">X</button>

        </div>
      </div>
