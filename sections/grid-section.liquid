    </div>
  </div>
</div>

<style>
  /* Overlay */
  .modal {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
  }

  /* Modal box */
  .modal-content {
    background: #fff;
    max-width: 800px;
    margin: 5% auto;
    padding: 20px;
    border-radius: 10px;
    display: flex;
    gap: 20px;
    position: relative;
    box-shadow: 0px 2px 4px rgba(0,0,0,0.2);
  }

  /* Close button */
  .close {
    position: absolute;
    top: 15px;
    right: 20px;
    font-size: 24px;
    cursor: pointer;
  }

  /* Left image */
  .modal-image img {
    width: 300px;
    border-radius: 6px;
  }

  /* Right details */
  .modal-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .product-title {
    font-family: 'Jost', sans-serif;
    font-size: 18px;
    font-weight: 300;
    color: #000;
  }

  .product-price {
    font-family: 'Lustria', serif;
    font-size: 16px;
    font-weight: 400;
    color: #000;
  }

  .product-description {
    font-size: 14px;
    font-weight: 300;
    line-height: 1.3;
    color: #000;
    max-width: 300px;
  }

  /* Labels */
  .section-label {
    font-size: 14px;
    font-weight: 400;
    color: #333;
  }

  /* Colors */
  .color-options .colors {
    display: flex;
    gap: 10px;
  }

  .color-btn {
    padding: 8px 20px;
    border: 0.5px solid #000;
    background: #fff;
    cursor: pointer;
    font-size: 14px;
    text-transform: capitalize;
  }

  .color-btn.blue {
    background: #0D499F;
    color: #fff;
  }

  .color-btn.black {
    background: #000;
    color: #fff;
  }

  .color-btn.active {
    outline: 2px solid #000;
  }

  /* Size */
  .size-options select {
    padding: 10px;
    border: 0.5px solid #000;
    font-size: 14px;
    width: 100%;
  }

  /* Add to cart */
  .add-to-cart {
    margin-top: 20px;
    padding: 12px;
    background: #000;
    color: #fff;
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    text-transform: uppercase;
    cursor: pointer;
    border: none;
    width: 100%;
  }
  .add-to-cart:hover {
    background: #333;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .modal-content {
      flex-direction: column;
      max-width: 95%;
    }
    .modal-image img {
      width: 100%;
    }
  }
</style>

<script>
  const modal = document.getElementById('myModal');
  const closeBtn = document.querySelector('.close');

  // افتح المودال للتجربة
  document.addEventListener('keydown', (e) => {
    if (e.key === 'm') modal.style.display = 'block';
  });

  // اقفال المودال
  closeBtn.onclick = () => (modal.style.display = 'none');
  window.onclick = (e) => {
    if (e.target === modal) modal.style.display = 'none';
  };
</script>

