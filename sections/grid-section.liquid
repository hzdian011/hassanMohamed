    .custom-image-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .image-block img {
      width: 100%;
      display: block;
    }

    .image-button {
      background-color: #000;
      color: #fff;
      padding: 5px 10px;
      text-decoration: none;
      border-radius: 5px;
    }
