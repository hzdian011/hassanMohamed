{% schema %}
{
  "name": "Gift Guide Section",
  "settings": [],
  "blocks": [
    {
      "type": "row1",
      "name": "Row 1",
      "settings": [
        { "type": "text", "id": "brand_text", "label": "Brand Text", "default": "TISSO VISON" },
        { "type": "text", "id": "center_sentence", "label": "Center Sentence", "default": "Find the ideal gift for your loved ones." },
        { "type": "text", "id": "btn_text", "label": "Button Text", "default": "CHOOSE GIFT" },
        { "type": "url", "id": "btn_link", "label": "Button Link" }
      ]
    },
    {
      "type": "row2",
      "name": "Row 2",
      "settings": [
        { "type": "image_picker", "id": "svg_row2", "label": "SVG Image" }
      ]
    },
    {
      "type": "row3",
      "name": "Row 3",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "The Gift Guide" },
        { "type": "textarea", "id": "paragraph", "label": "Paragraph", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
        { "type": "text", "id": "btn_text", "label": "Button Text", "default": "SHOP NOW" },
        { "type": "url", "id": "btn_link", "label": "Button Link" },
        { "type": "image_picker", "id": "svg_row3", "label": "SVG Image" }
      ]
    },
    {
      "type": "row4",
      "name": "Row 4",
      "settings": [
        { "type": "text", "id": "footer_text", "label": "Footer Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
      ]
    }
  ],
  "presets": [
    { "name": "Gift Guide Section" }
  ]
}
{% endschema %}

<div class="gift-guide-wrapper">
  {% for block in section.blocks %}
    {% if block.type == 'row1' %}
      <!-- Row 1 -->
      <div class="row row-1">
        <div class="col left">{{ block.settings.brand_text }}</div>
        <div class="col center">{{ block.settings.center_sentence }}</div>
        <div class="col right"><a href="{{ block.settings.btn_link }}" class="btn">{{ block.settings.btn_text }}</a></div>
      </div>
    {% endif %}
    {% if block.type == 'row2' %}
      <!-- Row 2 -->
      <div class="row row-2">
        {% if block.settings.svg_row2 != blank %}
          <img 
            src="{{ block.settings.svg_row2 | image_url }}" 
            alt="" 
            width="{{ block.settings.svg_row2.width }}" 
            height="{{ block.settings.svg_row2.height }}" 
          />
        {% endif %}
      </div>
    {% endif %}
    {% if block.type == 'row3' %}
      <!-- Row 3 -->
      <div class="row row-3">
        <div class="col left">
          <h2>{{ block.settings.title }}</h2>
          <p>{{ block.settings.paragraph }}</p>
          <a href="{{ block.settings.btn_link }}" class="btn">{{ block.settings.btn_text }}</a>
        </div>
        <div class="col right">
          {% if block.settings.svg_row3 != blank %}
            <img 
              src="{{ block.settings.svg_row3 | image_url }}" 
              alt="" 
              width="{{ block.settings.svg_row3.width }}" 
              height="{{ block.settings.svg_row3.height }}" 
            />
          {% endif %}
        </div>
      </div>
    {% endif %}
    {% if block.type == 'row4' %}
      <!-- Row 4 -->
      <div class="row row-4">
        <p>{{ block.settings.footer_text }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>

<style>
  .gift-guide-wrapper {
    max-width: 1440px;
    margin: 0 auto;
  }
  .row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .row-1 { height: 64px; }
  .row-2 { height: 390px; justify-content: center; }
  .row-3 { height: 402px; }
  .row-4 { height: 34px; justify-content: center; font-size: 14px; }
  img { max-width: 100%; height: auto; }
  @media (max-width: 768px) {
    .row { flex-direction: column; text-align: center; }
    .row-3 { flex-direction: column; }
  }
</style>
