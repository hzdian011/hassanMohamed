{% comment %} {% schema %}
{
  "name": "Products Grid",
  "blocks": [
    {
      "type": "product",
      "name": "Product Block",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select a product"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="products-grid">
  {% for block in section.blocks %}
    {% assign product = all_products[block.settings.product] %}

    <div class="product-card">
      <h3>{{ product.title }}</h3>
      <button class="plus-btn" data-handle="{{ product.handle }}">+</button>
    </div>
  {% endfor %}
</div>

<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>

    <!-- صورة المنتج -->
    <img id="modalImage" class="product-image" src="" alt="Product image" width="" height="">

    <!-- تفاصيل المنتج -->
    <h2 id="modalTitle"></h2>
    <p id="modalPrice" class="price"></p>
    <p id="modalDescription"></p>

    <!-- اختيار اللون -->
    <div class="color-options">
      <label>Color</label>
      <div id="colorContainer"></div>
    </div>

    <!-- اختيار المقاس -->
    <div class="size-options">
      <label for="sizeSelect">Size</label>
      <select id="sizeSelect">
        <option>Choose your size</option>
      </select>
    </div>

    <!-- زرار Add to Cart -->
    <button id="addToCartBtn">ADD TO CART →</button>
  </div>
</div>

<style>
    .color-options {
    display: flex;
    gap: 10px;
    margin: 15px 0;
  }

  .color-btn {
    padding: 8px 20px;
    border: 1px solid #ccc;
    background: #fff;
    cursor: pointer;
    font-weight: bold;
  }

  .color-btn.active {
    border-left: 4px solid blue; /* هنا اللون يتغير حسب اللون */
  }
</style>

<script>
  document.querySelectorAll('.plus-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const handle = btn.dataset.handle;

      const response = await fetch(`/products/${handle}.js`);
      const product = await response.json();

      // تعبئة البيانات
      document.getElementById('modalTitle').textContent = product.title;
      document.getElementById('modalPrice').textContent = product.price / 100 + ' €';
      document.getElementById('modalDescription').textContent = product.description;
      document.getElementById('modalImage').src = product.images[0];

      // بناء أزرار الألوان
      const colorContainer = document.getElementById('colorContainer');
      colorContainer.innerHTML = ''; // reset

      const colors = ['Blue', 'Black']; // هنا تقدر تجيبها من product.options لو موجودة
      colors.forEach((color, index) => {
        const btn = document.createElement('button');
        btn.textContent = color;
        btn.classList.add('color-btn');
        if (index === 0) btn.classList.add('active'); // أول لون active

        // تغيير الborder حسب اللون
        btn.addEventListener('click', () => {
          document.querySelectorAll('.color-btn').forEach((b) => b.classList.remove('active'));
          btn.classList.add('active');
          btn.style.borderLeft = `4px solid ${color.toLowerCase()}`;
        });

        colorContainer.appendChild(btn);
      });

      // بناء المقاسات
      const sizeSelect = document.getElementById('sizeSelect');
      sizeSelect.innerHTML = '<option>Choose your size</option>';
      if (product.variants) {
        product.variants.forEach((variant) => {
          let opt = document.createElement('option');
          opt.value = variant.id;
          opt.textContent = variant.option1; // على حسب الـ options
          sizeSelect.appendChild(opt);
        });
      }

      document.getElementById('myModal').style.display = 'block';
    });
  });

  // غلق المودال
  document.querySelector('.close').addEventListener('click', () => {
    document.getElementById('myModal').style.display = 'none';
  });
</script> {% endcomment %}


{% schema %}
{
  "name": "Products Grid",
  "blocks": [
    {
      "type": "product",
      "name": "Product Block",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select a product"
        }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}

<div class="products-grid">
  {% for block in section.blocks %}
    {% assign product = all_products[block.settings.product] %}
    <div class="product-card">
      <div class="image-wrapper">
        <img src="{{ product.featured_image | img_url: '500x' }}" alt="{{ product.title }}" width="" height="">
        
        <!-- زرار البلس -->
        <button 
          class="plus-btn" 
          data-handle="{{ product.handle }}" 
          style="top:50%; left:50%;">
          +
        </button>
      </div>

      <!-- التحكم في مكان زرار البلس -->
      <div class="controls">
        <label>X Position</label>
        <input type="range" min="0" max="100" value="50" class="range-x" data-target="{{ product.handle }}">
        
        <label>Y Position</label>
        <input type="range" min="0" max="100" value="50" class="range-y" data-target="{{ product.handle }}">
      </div>
    </div>
  {% endfor %}
</div>

<!-- المودال -->
<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>

    <img id="modalImage" class="product-image" src="" alt="Product image" width="" height="">
    <h2 id="modalTitle"></h2>
    <p id="modalPrice"></p>
    <p id="modalDescription"></p>

    <div class="color-options">
      <label>Color</label>
      <div id="colorContainer"></div>
    </div>

    <div class="size-options">
      <label for="sizeSelect">Size</label>
      <select id="sizeSelect">
        <option>Choose your size</option>
      </select>
    </div>

    <button id="addToCartBtn">ADD TO CART →</button>
  </div>
</div>

<style>
    .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    max-width: 1000px;
    margin: auto;
    }

    .product-card {
    text-align: center;
    }

    .image-wrapper {
    position: relative;
    display: inline-block;
    }

    .image-wrapper img {
    width: 100%;
    border-radius: 8px;
    }

    .plus-btn {
    position: absolute;
    transform: translate(-50%, -50%);
    background: white;
    border-radius: 50%;
    border: 2px solid black;
    width: 35px;
    height: 35px;
    font-size: 20px;
    cursor: pointer;
    }

    .controls {
    margin-top: 10px;
    }

    .controls label {
    display: block;
    font-size: 12px;
    margin-bottom: 2px;
    }

    .modal {
    display: none;
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.5);
    }

    .modal-content {
    background: #fff;
    margin: 5% auto;
    padding: 20px;
    max-width: 500px;
    border-radius: 10px;
    position: relative;
    }

    .close {
    position: absolute;
    top: 10px; right: 15px;
    font-size: 22px;
    cursor: pointer;
    }

    .color-options {
    display: flex;
    gap: 10px;
    margin: 15px 0;
    }

    .color-btn {
    padding: 8px 20px;
    border: 1px solid #ccc;
    background: #fff;
    cursor: pointer;
    font-weight: bold;
    }

    .color-btn.active {
    border-left: 4px solid blue;
    }
</style>

<script>
  // تحريك البلس بالـ range
  document.querySelectorAll('.range-x').forEach(input => {
    input.addEventListener('input', () => {
      const handle = input.dataset.target;
      const btn = document.querySelector(`.plus-btn[data-handle="${handle}"]`);
      btn.style.left = input.value + '%';
    });
  });

  document.querySelectorAll('.range-y').forEach(input => {
    input.addEventListener('input', () => {
      const handle = input.dataset.target;
      const btn = document.querySelector(`.plus-btn[data-handle="${handle}"]`);
      btn.style.top = input.value + '%';
    });
  });

  // فتح المودال عند الضغط على البلس
  document.querySelectorAll('.plus-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const handle = btn.dataset.handle;
      const response = await fetch(`/products/${handle}.js`);
      const product = await response.json();

      document.getElementById('modalTitle').textContent = product.title;
      document.getElementById('modalPrice').textContent = (product.price / 100) + ' €';
      document.getElementById('modalDescription').textContent = product.description;
      document.getElementById('modalImage').src = product.images[0];

      // بناء أزرار الألوان (لو فيه option اسمها Color)
      const colorContainer = document.getElementById('colorContainer');
      colorContainer.innerHTML = '';
      const colorOption = product.options.find(opt => opt.name.toLowerCase() === 'color');
      if (colorOption) {
        colorOption.values.forEach((color, i) => {
          const colorBtn = document.createElement('button');
          colorBtn.textContent = color;
          colorBtn.classList.add('color-btn');
          if (i === 0) colorBtn.classList.add('active');
          colorBtn.addEventListener('click', () => {
            document.querySelectorAll('.color-btn').forEach(b => b.classList.remove('active'));
            colorBtn.classList.add('active');
            colorBtn.style.borderLeft = `4px solid ${color.toLowerCase()}`;
          });
          colorContainer.appendChild(colorBtn);
        });
      }

      // بناء المقاسات (لو فيه option اسمها Size)
      const sizeSelect = document.getElementById('sizeSelect');
      sizeSelect.innerHTML = '<option>Choose your size</option>';
      product.variants.forEach(variant => {
        let opt = document.createElement('option');
        opt.value = variant.id;
        opt.textContent = variant.option1;
        sizeSelect.appendChild(opt);
      });

      document.getElementById('myModal').style.display = 'block';
    });
  });

  // اغلاق المودال
  document.querySelector('.close').addEventListener('click', () => {
    document.getElementById('myModal').style.display = 'none';
  });
</script>
