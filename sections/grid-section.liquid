{% endschema %}

<div class="products-grid">
  {% for block in section.blocks %}
    {% assign product = all_products[block.settings.product] %}

    <div class="product-card">
      <h3>{{ product.title }}</h3>
      <button class="plus-btn" data-handle="{{ product.handle }}">+</button>
    </div>
  {% endfor %}
</div>

<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2 id="modalTitle"></h2>
    <p id="modalPrice"></p>
    <p id="modalDescription"></p>
  </div>
</div>

<script>
  document.querySelectorAll('.plus-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const handle = btn.dataset.handle;

      // جلب بيانات المنتج من Shopify
      const response = await fetch(`/products/${handle}.js`);
      const product = await response.json();

      // تحديث محتوى الـ Modal
      document.getElementById('modalTitle').textContent = product.title;
      document.getElementById('modalPrice').textContent = product.price / 100 + ' USD';
      document.getElementById('modalDescription').textContent = product.description;

      // إظهار الـ Modal
      document.getElementById('myModal').style.display = 'block';
    });
  });

  // غلق الـ Modal
  document.querySelector('.close').addEventListener('click', () => {
    document.getElementById('myModal').style.display = 'none';
  });

  // غلق عند الضغط خارج الـ Modal
  window.addEventListener('click', (e) => {
    if (e.target.id === 'myModal') {
      document.getElementById('myModal').style.display = 'none';
    }
  });
</script>
