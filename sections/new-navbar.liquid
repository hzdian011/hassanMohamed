{% schema %}
{
  "name": "Custom Navbar",
  "settings": [
    {
      "type": "text",
      "id": "item_1",
      "label": "Navbar Item 1",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "item_2",
      "label": "Navbar Item 2",
      "default": "About"
    },
    {
      "type": "text",
      "id": "item_3",
      "label": "Navbar Item 3",
      "default": "Contact"
    }
  ],
  "presets": [
    {
      "name": "Custom Navbar"
    }
  ]
}
{% endschema %}

<nav class="custom-navbar">
  <div class="nav-item">{{ section.settings.item_1 }}</div>
  <P class="nav-item">{{ section.settings.item_2 }}</P>
  <div class="nav-item">{{ section.settings.item_3 }}</div>
</nav>
<div class="full-width-image">
  <img src="{{ 'gift-icons2.svg' | asset_url }}" alt="Gift Icon" width="" height="">
</div>


<style>
.custom-navbar {
  width: 100%;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10px 0;
}

.custom-navbar .nav-item {
  color: #000000;
  font-size: 18px;
  cursor: pointer;
  transition: 0.3s;
}

.custom-navbar .nav-item:hover {
  color: yellow;
}

.full-width-image img {
  width: 100%;
  height: 400px;
  object-fit: contain; /* علشان تحافظ على أبعاد الصورة */
  display: block;
}
</style>
