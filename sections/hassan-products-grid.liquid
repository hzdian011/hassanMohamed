{% comment %}
  Section: Custom Products Grid (2 rows Ã— 3 columns)
{% endcomment %}

<section class="custom-products-grid page-width">
  <div class="grid grid--2-rows">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="product-card">
          <a href="{{ product.url }}">
            <img
              src="{{ product.featured_image | image_url: width: 500 }}"
              alt="{{ product.title }}"
              class="product-image"
              height="250"
              width="500"
            >
            <h3 class="product-title">{{ product.title }}</h3>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
  .custom-products-grid .grid--2-rows {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  .custom-products-grid .product-card {
    text-align: center;
  }
  .custom-products-grid .product-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 10px;
  }
  .custom-products-grid .product-title {
    margin-top: 10px;
    font-size: 16px;
  }
</style>

{% schema %}
{
  "name": "Custom Products Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Custom Products Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}
