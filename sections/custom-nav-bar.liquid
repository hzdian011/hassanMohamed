{% schema %}
{
  "name": "Custom Nav Bar",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "My Brand"
    },
    {
      "type": "text",
      "id": "center_text",
      "label": "Center Text",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}

<nav class="custom-nav-bar">
  <div class="nav-left">
    <a href="{{ section.settings.button_link }}" class="nav-btn">
      {{ section.settings.button_text }}
    </a>
  </div>
  <div class="nav-center">
    <span>{{ section.settings.center_text }}</span>
  </div>
  <div class="nav-right">
    <span class="brand">{{ section.settings.brand_name }}</span>
  </div>
</nav>

<style>
  .custom-nav-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
    background: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }
  .nav-btn {
    background: #000;
    color: #fff;
    padding: 8px 16px;
    border-radius: 4px;
    animation: pulse 1.5s infinite;
  }
  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }
  .brand {
    font-weight: bold;
  }
</style>
