<section class="gift-guide-section">
  <!-- Background -->
  <div class="gift-guide-bg">
    <img src="{{ 'gift-icons1.svg' | asset_url }}" alt="Gift Guide background" width="800" height="400">
  </div>

  <!-- Content -->
  <div class="gift-guide-content">
    <!-- Top bar -->
    <div class="gift-guide-top">
      <div class="logo">{{ section.settings.logo_text }}</div>
      <div class="top-text">{{ section.settings.top_text }}</div>
      <a href="{{ section.settings.top_btn_link }}" class="btn yellow">{{ section.settings.top_btn_text }}</a>
    </div>

    <!-- Center content -->
    <div class="center-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <a href="{{ section.settings.cta_link }}" class="btn black">{{ section.settings.cta_text }}</a>
    </div>

    <!-- Bottom bar -->
    <div class="bottom-text">{{ section.settings.bottom_text }}</div>
  </div>
</section>

<style>
  .gift-guide-section {
    position: relative;
    overflow: hidden;
    text-align: center;
  }

  .gift-guide-bg img {
    width: 100%;
    height: auto;
    display: block;
  }

  .gift-guide-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px;
  }

  .gift-guide-top, .bottom-text {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
    font-size: 14px;
  }

  .center-text {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .center-text h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .btn {
    padding: 10px 20px;
    text-decoration: none;
    font-weight: bold;
    display: inline-block;
  }

  .btn.black {
    background: black;
    color: white;
  }

  .btn.yellow {
    background: #FFD700;
    color: black;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .gift-guide-content {
      padding: 10px;
    }
    .center-text h2 {
      font-size: 1.5rem;
    }
    .gift-guide-top {
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Gift Guide Section",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo Text", "default": "TISSO VISON" },
    { "type": "text", "id": "top_text", "label": "Top Bar Text", "default": "Find the ideal gift for your loved ones." },
    { "type": "text", "id": "top_btn_text", "label": "Top Button Text", "default": "CHOOSE GIFT" },
    { "type": "url", "id": "top_btn_link", "label": "Top Button Link" },
    { "type": "text", "id": "heading", "label": "Main Heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season." },
    { "type": "text", "id": "cta_text", "label": "CTA Button Text", "default": "SHOP NOW" },
    { "type": "url", "id": "cta_link", "label": "CTA Button Link" },
    { "type": "text", "id": "bottom_text", "label": "Bottom Bar Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
  ],
  "presets": [
    { "name": "Gift Guide Section" }
  ]
}
{% endschema %}
